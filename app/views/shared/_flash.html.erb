<div id="flash-messages" class="fixed top-4 right-4 z-50">
  <% flash.each do |type, message| %>
    <div
      class="<%= type == 'notice' ? 'bg-green-500' : 'bg-red-500 ' %> text-white px-6 py-4 rounded-shadow-lg mb-2"
      data-controller="flash"
    >
      <%= message %>
    </div>
  <% end %>
</div>

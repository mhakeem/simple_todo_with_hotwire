<%= turbo_frame_tag "stats" do %>
  <div class="p-4 bg-blue-50 rounded mb-6 flex gap-6">
    <div>
      <div class="text-2xl font-bold"><%= @total %></div>
      <div class="text-sm text-gray-600">Total Tasks</div>
    </div>
    <div>
      <div class="text-2xl font-bold text-green-600"><%= @done %></div>
      <div class="text-sm text-gray-600">Done</div>
    </div>
    <div>
      <div class="text-2xl font-bold text-orange-600"><%= @in_progress %></div>
      <div class="text-sm text-gray-600">In Progress</div>
    </div>
    <div>
      <div class="text-2xl font-bold text-gray-600"><%= @todo %></div>
      <div class="text-sm text-gray-600">To Do</div>
    </div>
  </div>
<% end %>